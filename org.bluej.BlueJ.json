{
  "app-id" : "org.bluej.BlueJ",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version" : "25.08",
  "sdk" : "org.freedesktop.Sdk",
  "sdk-extensions" : [ "org.freedesktop.Sdk.Extension.openjdk21" ],
  "build-options" : { "append-path": "/usr/lib/sdk/openjdk21/bin" },
  "command": "org.bluej.BlueJ",
  "finish-args" : [
    "--env=PATH=/app/jre/bin:/usr/bin:/app/bin",
    "--share=network",
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--socket=pulseaudio",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download",
    "--filesystem=xdg-desktop",
    "--persist=.bluej",
    "--metadata=X-DConf=migrate-path=/org/bluej/BlueJ/"
  ],
  "modules" : [
    {
      "name" : "openjdk",
      "buildsystem" : "simple",
      "build-commands" : [ "/usr/lib/sdk/openjdk21/install.sh" ]
    },
    {
      "name": "javafx",
      "buildsystem": "simple",
      "build-commands": [
	"mkdir -p /app/javafx",
	"mv -f ./lib /app/javafx",
	"ls -l /app/javafx"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://download2.gluonhq.com/openjfx/23.0.2/openjfx-23.0.2_linux-x64_bin-sdk.zip",
          "sha256": "8268d8c6ba13c452a4a9a3448cb5c6c62484ab782b34e448d414d7b6224e4309"
        },
        {
          "type": "archive",
          "only-arches": ["aarch64"],
          "url": "https://download2.gluonhq.com/openjfx/23.0.2/openjfx-23.0.2_linux-aarch64_bin-sdk.zip",
          "sha256": "7066df6467c0d042bae6ff3cdce7dacda18e5b499f641957d3c44cd0ecc282c5"
        }
      ]
    },
    {
      "name": "bluej",
      "buildsystem": "simple",
      "build-commands": [
        "for size in 32 48 256; do install -Dm644 ./bluej/lib/images/bluej-icon-${size}.png /app/share/icons/hicolor/${size}x${size}/apps/org.bluej.BlueJ.png; done",
	"sed -Ei 's,https\\\\://services.gradle.org/distributions/,file:/run/build/bluej/,' gradle/wrapper/gradle-wrapper.properties",
	"cat gradle/wrapper/gradle-wrapper.properties",
	"./gradlew --no-daemon --offline :bluej:packageBluePreDist",
        "mkdir -p /app/bluej",
        "bsdunzip -o -d /app/bluej ./bluej/package/bluej-dist.jar"
      ],
